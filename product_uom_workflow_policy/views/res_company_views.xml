<openerp>
<data>

<record id="res_company_view_form" model="ir.ui.view">
    <field name="name">res.company form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page name="workflow_policy_uom" string="Workflow Policy Product Uom">
                    <group name="grp_workflow_policy_uom" colspan="4" col="2">
                        <field name="product_uom_confirm_grp_ids" widget="many2many_tags"/>
                        <field name="product_uom_valid_grp_ids" widget="many2many_tags"/>
                        <field name="product_uom_restart_grp_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
