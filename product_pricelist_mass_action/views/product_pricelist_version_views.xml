<openerp>
<data>
<record id="product_pricelist_version_view_form" model="ir.ui.view">
    <field name="name">Product Pricelist Version</field>
    <field name="model">product.pricelist.version</field>
    <field name="inherit_id" ref="product.product_pricelist_version_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//form/group[1]" position="before">
            <header>
                <button name="%(add_product_to_pricelist_item_action)d" string="Add Products" type="action"/>
                <button name="%(add_product_template_to_pricelist_item_action)d" string="Add Product Templates" type="action"/>
                <button name="%(add_product_category_to_pricelist_item_action)d" string="Add Product Categories" type="action"/>
            </header>
        </xpath>
    </field>
</record>
</data>
</openerp>

